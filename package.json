    "description": "Netflix but for pirates ðŸ´â€â˜ ï¸â˜ ï¸",
    "scripts": {
        "start": "npm run server",
        "client": "react-scripts start",
        "server": "node server/main.js",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "mobile:android": "cd mobile & npm run android",
        "mobile:ios": "cd mobile & npm run ios",
        "mobile:start": "cd mobile & npm run start",
        "desktop:start": "electron desktop/main.js",
        "desktop:package": "electron-builder -mwl"
    },
    "dependencies": {
        "@ronuse/norseu": "^0.0.1",
        "electron-store": "^8.1.0",
        "express": "^4.18.2",
        "history": "^5.3.0",
        "kyofuuc": "^0.0.2",
        "lz-string": "^1.4.4",
        "node-html-parser": "^6.1.4",
        "playwright": "^1.29.1",
        "react": "^18.1.0",
        "react-dom": "^18.1.0",
        "react-router-dom": "^6.3.0",
        "react-scripts": "5.0.1",
        "web-vitals": "^2.1.4"
    },
    "devDependencies": {
        "electron": "^22.0.0",
        "electron-builder": "^23.6.0"
    },
    "build": {
        "appId": "theotherguy.darkprojects.app",
        "extends": null,
        "files": [
            "build/**/*",
            "desktop/**/*",
            "server/**/*"
        ],
        "directories": {
            "buildResources": "desktop"
        },
        "dmg": {
            "icon": "desktop/viewme.png",
            "contents": [
                {
                    "x": 130,
                    "y": 220
                },
                {
                    "x": 410,
                    "y": 220,
                    "type": "link",
                    "path": "/Applications"
                }
            ]
        },
        "mac": {
            "icon": "desktop/viewme.png"
        },
        "win": {
            "icon": "desktop/viewme.png"
        },
        "linux": {
            "icon": "desktop/viewme.png",
            "target": [
                "deb",
                "rpm",
                "AppImage"
            ],
            "category": "Entertainment"
        }
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
